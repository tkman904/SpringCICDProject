<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.web.mapper.BusanMapper">
  <sql id="where-sql">
    WHERE
    <choose>
      <when test="type == 1">
        contenttype = 12
      </when>
      <when test="type == 2">
        contenttype = 14
      </when>
      <when test="type == 3">
        contenttype = 15
      </when>
      <when test="type == 4">
        contenttype = 32
      </when>
      <when test="type == 5">
        contenttype = 38
      </when>
      <when test="type == 6">
        contenttype = 39
      </when>
    </choose>
  </sql>
  <select id="busanListData" resultType="com.sist.web.vo.BusanVO" parameterType="hashmap">
    SELECT no, title, image1, contentid, contenttype, address, hit
    FROM busantravel
    <include refid="where-sql"/>
    ORDER BY no ASC
    OFFSET #{start} ROWS FETCH NEXT 6 ROWS ONLY
  </select>
  
  <select id="busanTotalPage" resultType="int" parameterType="hashmap">
    SELECT CEIL(COUNT(*)/6.0)
    FROM busantravel
    <include refid="where-sql"/>
  </select>
</mapper>